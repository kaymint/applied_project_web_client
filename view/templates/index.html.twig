<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Automatic Number Plate Recognition</title>
    <meta name="description" content="Shuttercop: An Automatic Number Plate Recognition System For Ghanaian Vehicles" />
    <meta name="keywords" content="number plate, automatic, recognition, Ghana, vehicles" />
    <meta name="author" content="Kenneth Mintah Mensah - Ashesi" />
    <link rel="stylesheet" href="css/bootstrap.min2.css" type="text/css">
    <link rel="stylesheet" href="css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="css/ionicons.min.css" type="text/css">
    <link rel="stylesheet" href="css/main.css" type="text/css">
</head>
<body>

{# NAVIGATION BAR#}
{% block NAVIGATION_MENU %}
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="index.php">
                    <img class="col-xs-6" src="img/small_logo.png" style="width: 64px; height: auto">
                    <p class="col-xs-6 text-capitalize logo_title" >ShutterCop</p>
                </a>
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#"><span class="fa fa-user"></span> Logout </a></li>
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#"><span class="fa fa-bell"> </span> Notifications </a></li>
                </ul>
            </div>
        </div>
    </nav>
{% endblock %}


{# SIDEBAR #}
{% block SIDEBAR %}
    <div class="col-sm-3">
        <img src="img/download.png" alt="logo">
        <div class="username text-center">
            <a href="#">{{ first_name }} {{ initial }} {{ last_name }}</a>
            <br>
            <br>
            PIN: {{ PIN }}
        </div>
        <div>

        </div>
    </div>
{% endblock %}


{% block MAINCONTENT %}
    <div class="col-sm-9">
        <h1>Fines</h1>
        <ul class="breadcrumb">
            <li><a href="#">Home</a></li>
            <li class="active">Fines</li>
        </ul>

        <table class="table table-striped table-hover ">
            <thead>
            <tr>
                <th>Offence #</th>
                <th>Offence Date</th>
                <th>Vehicle No.</th>
                <th>Location</th>
                <th>Due</th>
                <th>Payment Status</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for x in fines %}
                {% if x.payment_status == 'UNPAID' %}
                <tr class="danger">
                    {% else %}
                        <tr class="success">
                    {% endif %}
                <td>{{ x.offence_id }}</td>
                <td>{{ x.date_issued }}</td>
                <td>{{ x.vehicle_id }}</td>
                <td>{{ x.location }}</td>
                <td>{{ x.due_date }}</td>
                <td>{{ x.payment_status }}</td>
                {% if x.payment_status == 'PAID' %}
                    <td>
                        <a href="../controller/fines-controller.php?cmd=1&fid={{ x.fine_id }}" class="btn btn-success">View Receipt</a>
                    </td>
                {% else %}
                    <td>
                        <a href="../controller/fines-controller.php?cmd=1&fid={{ x.fine_id }}" class="btn btn-warning">Pay</a>
                    </td>
                {% endif %}
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block FOOTER %}
    <footer id="footer">
        <div class="row">

            <div class="col-xs-4">
                <img class="col-xs-12" src="img/inverse.png">
                <p class="col-xs-12 footer_logo">ShutterCop</p>
            </div>

            <div class="col-xs-4">

            </div>

            <div class="col-xs-4">

            </div>

        </div>

    </footer>
{% endblock %}

<script type="text/javascript" src="js/jquery-2.1.3.min.js"></script>
<script type="text/javascript" src="js/bootstrap.min.js"></script>
</body>
</html>